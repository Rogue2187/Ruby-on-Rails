  .side-menu__guide
    = link_to "", class: "side-menu-list side-menu__guide__home " do
      %span.glyphicon.glyphicon-home
      %p  ホーム
    = link_to "", class: "side-menu-list side-menu__guide__channel" do
      %span.glyphicon.glyphicon-list-alt
      %p  登録チャンネル
  .side-menu__library
    %h4  ライブラリ
    = link_to "/watches", class: "side-menu-list side-menu__library__watch" do
      %span.glyphicon.glyphicon-time
      %p  履歴
    = link_to "", class: "side-menu-list side-menu__library__stock" do
      %span.glyphicon.glyphicon-check
      %p  後で見る
