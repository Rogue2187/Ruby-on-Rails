.result-list
  .result-list__left
    = link_to video_path(video.id) do
      = video_tag video.video
  .result-list__right
    = link_to video_path(video.id) do
      .result-list__right__title
        = video.title
      .result-list__right__content
        .result-list__right__content__name
          = video.user.name
        .result-list__right__content__dot ・
        .result-list__right__content__time
          = "視聴回数 #{video.count}回"
        .result-list__right__content__dot ・
        .result-list__right__content__day
          = "#{date_format(video.created_at)}"
      .result-list__right__comment
        = video.comment
      .result-list__right__description
        = video.description
  
